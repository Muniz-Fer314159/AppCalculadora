<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCalculadora.CalculadoraMarcal"
             Title="Calculadora Padrão">

    <Grid Padding="20" RowSpacing="10" ColumnSpacing="10"
          RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto"
          ColumnDefinitions="*,*,*,*">

        <Label x:Name="displayLabel"
               Text="0"
               FontSize="Large"
               Grid.ColumnSpan="4"
               HorizontalTextAlignment="End"
               VerticalOptions="Center"
               Margin="0,10"
               HeightRequest="60"/>

        <Button Text="/" Grid.Row="1" Grid.Column="0" Clicked="OnOperatorClicked"/>
        <Button Text="X" Grid.Row="1" Grid.Column="1" Clicked="OnOperatorClicked"/>
        <Button Text="-" Grid.Row="1" Grid.Column="2" Clicked="OnOperatorClicked"/>
        <Button Text="+" Grid.Row="1" Grid.Column="3" Clicked="OnOperatorClicked"/>

        <Button Text="7" Grid.Row="2" Grid.Column="0" Clicked="OnNumberClicked"/>
        <Button Text="8" Grid.Row="2" Grid.Column="1" Clicked="OnNumberClicked"/>
        <Button Text="9" Grid.Row="2" Grid.Column="2" Clicked="OnNumberClicked"/>
        <Button Text="←" Grid.Row="2" Grid.Column="3" Clicked="OnBackspaceClicked" Grid.RowSpan="4"/>

        <Button Text="4" Grid.Row="3" Grid.Column="0" Clicked="OnNumberClicked"/>
        <Button Text="5" Grid.Row="3" Grid.Column="1" Clicked="OnNumberClicked"/>
        <Button Text="6" Grid.Row="3" Grid.Column="2" Clicked="OnNumberClicked"/>

        <Button Text="1" Grid.Row="4" Grid.Column="0" Clicked="OnNumberClicked"/>
        <Button Text="2" Grid.Row="4" Grid.Column="1" Clicked="OnNumberClicked"/>
        <Button Text="3" Grid.Row="4" Grid.Column="2" Clicked="OnNumberClicked"/>

        <Button Text="C" Grid.Row="5" Grid.Column="0" Clicked="OnClearClicked"/>
        <Button Text="0" Grid.Row="5" Grid.Column="1" Clicked="OnNumberClicked"/>
        <Button Text="," Grid.Row="5" Grid.Column="2" Clicked="OnDecimalClicked"/>

        <Button Text="=" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="4"
                BackgroundColor="LightBlue"
                FontSize="Large"
                Clicked="OnEqualsClicked"/>
    </Grid>
</ContentPage>
